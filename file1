@app.route("/api/vm-resize", methods=["POST"])
def vm_resize():
    """
    VM Resize via GitLab + ArgoCD
    ---
    tags:
      - VM Operations
    consumes:
      - application/json
    parameters:
      - in: body
        name: vm
        required: true
        schema:
          type: object
          required:
            - vm_name
            - namespace
            - cpu
            - memory
          properties:
            vm_name:
              type: string
              default: "wh-labocp-007"
              readOnly: true
            namespace:
              type: string
              default: "gkp"
              readOnly: true
            cpu:
              type: integer
              default: 4
            memory:
              type: string
              default: "8Gi"
    responses:
      200:
        description: VM Resize triggered successfully
        examples:
          application/json: 
            status: "VM resize triggered"
    """
